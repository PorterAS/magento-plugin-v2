<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Porterbuddy_Porterbuddy::css/porterbuddy.css"/>
        <script async="async" type="text/js" src="https://widget.porterbuddy.com/porterbuddy-widget.js" src_type="url" />
        <css src="https://widget.porterbuddy.com/porterbuddy-widget.css" src_type="url" rel="stylesheet" type="text/css" />
        <css src="https://widget.porterbuddy-test.com/porterbuddy-checkout.css" src_type="url" rel="stylesheet" type="text/css"/>
        <script async="async" type="text/js" src="https://widget.porterbuddy-test.com/porterbuddy-checkout.js" src_type="url"/>
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="config" xsi:type="array">
                                                        <item name="shippingMethodListTemplate" xsi:type="string">Porterbuddy_Porterbuddy/shipping</item>
                                                    </item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="before-shipping-method-form" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="porterbuddy-hide-rates-warning" xsi:type="array">
                                                                    <item xsi:type="string" name="component">Porterbuddy_Porterbuddy/js/address-warning</item>
                                                                    <item name="enabled" xsi:type="helper" helper="Porterbuddy\Porterbuddy\Helper\Data::getHideShippingOnEmptyAddress" />
                                                                </item>
                                                                <item name="porterbuddy-shipping-widget" xsi:type="array">
                                                                    <item xsi:type="string" name="component">Porterbuddy_Porterbuddy/js/shipping</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>